<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo do ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_25" />
            <corners
                android:topLeftRadius="08dp"
                android:topRightRadius="08dp"
                />
        </shape>
    </item>

    <!-- Progresso do ProgressBar -->
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="@color/red_10"
                    android:centerColor="@color/red_50"
                    android:endColor="@color/color_default"
                    android:angle="90" />
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>

</layer-list>
