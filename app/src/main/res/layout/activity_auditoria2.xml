<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.consultaAuditoria.AuditoriaActivity2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_auditoria2"
        style="@style/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Consulta Auditoria" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_layout_num_auditoria2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="08dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:hint="Bipagem"
        android:textAlignment="center"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_auditoria2">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_auditoria_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionSend"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar5" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_auditoria2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="04dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_layout_num_auditoria2"
        tools:itemCount="02"
        tools:listitem="@layout/item_rv_auditoria_3" />

    <ProgressBar
        android:id="@+id/progress_auditoria_2"
        style="@style/progress_default"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_layout_num_auditoria2"
        app:layout_constraintEnd_toEndOf="@+id/edit_layout_num_auditoria2"
        app:layout_constraintTop_toTopOf="@+id/edit_layout_num_auditoria2" />

</androidx.constraintlayout.widget.ConstraintLayout>