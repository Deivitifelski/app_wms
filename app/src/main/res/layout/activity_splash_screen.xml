<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/vermelho_beirario"
    android:layout_height="match_parent"
    tools:context=".ui.splashscreen.SplashScreenActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_written"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:src="@drawable/logobranco"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_wms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WMS"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/logo_written"
        android:textColor="@color/white"/>

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:indeterminateTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_wms" />


</androidx.constraintlayout.widget.ConstraintLayout>