<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.etiquetagem.fragment.LabelingPendingFragment1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Etiquetagem" />

    <ProgressBar
        android:id="@+id/progress_bar_edit_etiquetagem1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:indeterminateTint="@color/vermelho_beirario"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/edit_etiquetagem"
        app:layout_constraintEnd_toEndOf="@+id/edit_etiquetagem"
        app:layout_constraintTop_toTopOf="@+id/edit_etiquetagem" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_etiquetagem"
        style="@style/edit_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_add_next_flecha_24"
        android:focusable="true"
        android:hint="Leia o número de série:"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_imagem_etiquetagem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:focusable="true"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:elevation="10dp"
        android:foregroundTint="@color/black"
        android:background="@drawable/custom_button_selector_etiquetagem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>