<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="06dp"
    app:cardElevation="04dp"
    android:layout_margin="04dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="06dp"
            android:layout_height="40dp"
            android:background="@color/vermelho_beirario" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_emissao"
            style="@style/custom_txt_linear_horizontal"
            android:textSize="10sp"
            tools:text="13/10/21" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_nf"
            style="@style/custom_txt_linear_horizontal"
            android:textSize="10sp"
            tools:text="58982" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_ser"
            style="@style/custom_txt_linear_horizontal"
            android:textSize="10sp"
            tools:text="23" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_fil"
            style="@style/custom_txt_linear_horizontal"
            android:textSize="10sp"
            tools:text="3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_vol"
            style="@style/custom_txt_linear_horizontal"
            android:textSize="10sp"
            tools:text="20" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_pen"
            style="@style/custom_txt_linear_horizontal"
            android:textSize="10sp"
            tools:text="10" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>

