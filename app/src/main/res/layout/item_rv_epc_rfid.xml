<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:gravity="center_vertical"
    android:id="@+id/layout_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Ícone -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_file"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_tag"
        app:layout_constraintBottom_toBottomOf="@+id/text_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_identificacao" />

    <!-- Título e Descrição -->
    <TextView
        android:id="@+id/text_identificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="identificação do arquivo"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Espaço entre o título e as informações -->


    <!-- Texto das descrições dos itens -->
    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cód.i - desc - cód.cor - desc - tam - unid.med - qtde"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/text_identificacao"
        app:layout_constraintTop_toBottomOf="@+id/text_identificacao" />
</androidx.constraintlayout.widget.ConstraintLayout>
