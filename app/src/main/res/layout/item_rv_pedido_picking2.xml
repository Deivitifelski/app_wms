<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pedido_picking2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Pedido:"
        android:textSize="12sp"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/api_pedido_picking2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pedido_picking2"
        app:layout_constraintStart_toStartOf="@+id/api_end_visual_picking2"
        app:layout_constraintTop_toTopOf="@+id/pedido_picking2"
        tools:text="12972372" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/api_end_visual_picking2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="OA-7-2873"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="@+id/end_visual_picking2"
        app:layout_constraintStart_toEndOf="@+id/end_visual_picking2"
        app:layout_constraintTop_toTopOf="@+id/end_visual_picking2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/end_visual_picking2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed"
        android:text="End.Visual"
        android:textSize="12sp"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toStartOf="@+id/pedido_picking2"
        app:layout_constraintTop_toBottomOf="@+id/api_pedido_picking2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:foreground="?selectableItemBackground"
        android:padding="10dp"
        android:src="@drawable/icon_expande_dow"
        app:layout_constraintBottom_toTopOf="@+id/list_objetosPicking2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_objetosPicking2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pedido_picking2"
        app:layout_constraintTop_toBottomOf="@+id/api_end_visual_picking2"
        tools:listitem="@layout/item_rv_num_serie_picking2">


    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/view_picking2"
        style="@style/view_bottom_default"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_objetosPicking2" />


</androidx.constraintlayout.widget.ConstraintLayout>