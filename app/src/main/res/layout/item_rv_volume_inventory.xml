<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_count_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="4"
            android:text="1"
            android:textColor="@color/vermelho_beirario"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="N°Série"
            app:layout_constraintStart_toStartOf="@+id/it_count_position"
            app:layout_constraintTop_toBottomOf="@+id/it_count_position" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Sku"
            app:layout_constraintStart_toStartOf="@+id/it_count_position"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView18" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Grade"
            app:layout_constraintStart_toStartOf="@+id/it_count_position"
            app:layout_constraintTop_toBottomOf="@+id/it_sku" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            tools:text="A21043703047407340347047"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView18"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView18"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView18"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_sku"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            tools:text="123.34.355.355.35555"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView15"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView18"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/it_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView14"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView18"
            app:layout_constraintTop_toTopOf="@+id/appCompatTextView14"
            tools:text="99" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/it_image_printer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="4"
            android:src="@drawable/ic_impressora_print"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            style="@style/view_bottom_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>