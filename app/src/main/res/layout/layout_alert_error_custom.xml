<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_custom_alert_error"
        android:layout_width="12dp"
        android:layout_height="1dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_message_atencao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"
        tools:text="ERRO AO ADICIONAR ITEM A TAREFA DE MOVIMENTACAO\n (TAREFA NAO EXISTE)" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sucess_mov4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/errordialog" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_atencao_layout_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vermelho_beirario"
        android:fontFamily="sans-serif-condensed"
        android:foreground="?selectableItemBackground"
        android:text="Ok"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

</androidx.appcompat.widget.LinearLayoutCompat>
