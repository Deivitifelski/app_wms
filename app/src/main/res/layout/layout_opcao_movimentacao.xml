<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha uma opção para realizar a tarefa"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/movimentacao_enderecos_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginTop="20sp"
        android:textSize="12sp"
        android:padding="16dp"
        android:text="Movimentação entre endereços" />

    <Button
        android:id="@+id/movimentacao_volumes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12sp"
        android:textSize="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="Movimentação de volumes" />
</LinearLayout>
