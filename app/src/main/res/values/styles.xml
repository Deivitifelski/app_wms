<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="txt_card_01_grande_branco">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edit_qrcode">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/custom_caixa_edit_text</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/vermelho_beirario</item>
    </style>

    <style name="button_padrao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">04dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/button_padrao</item>
    </style>

    <style name="txt_dados_rv_etc">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_frame_bottomsheet_bordas</item>
    </style>

    <style name="progress_inner_edit">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:indeterminateTint">@color/vermelho_beirario</item>
    </style>
</resources>